global
        chroot /var/lib/haproxy
        user haproxy
        group haproxy
        
        # Default SSL material locations
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        # Default ciphers to use on SSL-enabled listening sockets.
        # For more information, see ciphers(1SSL). This list is from:
        #  https://hynek.me/articles/hardening-your-web-servers-ssl-ciphers/
        ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS
        ssl-default-bind-options no-sslv3

defaults
        mode http
        timeout connect 5000
        timeout client 50000
        timeout server 50000

listen stats 
        bind *:8080
        stats enable
        stats uri /

frontend www
        bind *:80
        acl solr_master_methods method POST DELETE PUT
        acl solr_slave_methods method GET


# generated by consul-template

        acl host_solr hdr(host) -i solr.127.0.0.1.xip.io

{{ range services }}
  {{ $service := . }}
        acl host_{{ $service.Name }} hdr(host) -i {{ $service.Name | replaceAll "_" "." }}
  {{ if env "HAPROXY_DOMAIN" }}
    {{ $haproxy_domain := env "HAPROXY_DOMAIN" | split ":" }}
    {{ range $haproxy_domain }}
        acl host_{{ $service.Name }} hdr(host) -i {{ $service.Name | replaceAll "_" "." }}.{{ . }}
    {{ end }}
  {{ end }}
  {{ range .Tags }}
    {{ if . | regexMatch "server_alias=" }}
        acl host_{{ $service.Name }} hdr(host) -i {{ . | regexReplaceAll ".*=" "" }}
    {{ end }}
  {{ end }}

  {{ if .Tags | contains "solr-master" }}
        use_backend solr_master_backend if host_{{ .Name }} solr_master_methods
        use_backend solr_slave_backend if host_{{ .Name }} solr_slave_methods
  {{ else }}
      {{ if .Tags | contains "solr-slave" }}
        use_backend solr_slave_backend if host_{{ .Name }} solr_slave_methods
      {{ else }}
        use_backend {{ .Name }}_backend if host_{{ .Name }}
      {{ end }}
  {{ end }}
{{ end }}
        use_backend solr_master_backend if host_solr solr_master_methods
        use_backend solr_slave_backend if host_solr solr_slave_methods

backend solr_master_backend
{{ range services }}
    {{ if .Tags | contains "solr-master"}}
        {{ range service .Name }}
      server {{ .ID }} {{ .Address }}:{{ .Port }}
        {{ end }}
    {{ end }}
{{ end }}

backend solr_slave_backend
{{ range services }}
    {{ if (or (.Tags | contains "solr-master") (.Tags | contains "solr-slave")) }}
        {{ range service .Name }}
      server {{ .ID }} {{ .Address }}:{{ .Port }}
        {{ end }}
    {{ end }}
{{ end }}

{{ range services }}
    {{ if (or (.Tags | contains "solr-master") (.Tags | contains "solr-slave")) }}
    {{else}}
backend {{ .Name }}_backend
      {{ if .Tags | contains "sticky_session" }}
      # sticky
      {{ end }}
      {{ range service .Name }}
      server {{ .ID }} {{ .Address }}:{{ .Port }}
      {{ end }}
    {{ end }}
{{ end }}